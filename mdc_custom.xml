		<!-- Server Action Definitions -->
		<record model="ir.actions.server" id="action_mdc_order_bigc_validate">
			<field name="sequence" eval="5" />
			<field name="state">code</field>
			<field name="type">ir.actions.server</field>
			<field name="model_id" search="[('model','=','mdc.order.bigc')]" />
			<field name="code">
				action = self.validate(cr, uid,
				context.get('active_ids'), context)
			</field>

			<field name="condition">True</field>
			<field name="name">Validate</field>
		</record>
		<record model="ir.actions.server" id="action_mdc_order_bigc_convert">
			<field name="sequence" eval="5" />
			<field name="state">code</field>
			<field name="type">ir.actions.server</field>
			<field name="model_id" search="[('model','=','mdc.order.bigc')]" />
			<field name="code">
				action = self.convert(cr, uid,
				context.get('active_ids'), context)
			</field>
			<field name="condition">True</field>
			<field name="name">Convert</field>
		</record>
