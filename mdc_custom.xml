 </record>   

    <record id="mdc_raworder1_tree" model="ir.ui.view">
        <field name="name">mdc.raworder1.tree</field>
        <field name="model">mdc.raworder1</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Raw Order - Format 1">
                <field name='validate_date'/>
                <field name='podate'/>
                <field name='deliverydate'/>
                <field name='pono'/>
                <field name='textbox13'/>
                <field name='lineitemno_1'/>
                <field name='eanproductcode'/>
                <field name='productdesc'/>
            </tree>
         </field>
     </record>

	<!-- Action -->
	<record model="ir.actions.act_window" id="action_mdc_custom">
		<field name="name">MDC Custom Action</field>
		<field name="res_model">mdc.raworder1</field>
        <field name="view_id" ref="mdc_raworder1_tree"/>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
	</record>

	<record model="ir.actions.act_window" id="action_mdc_custmap">
		<field name="name">MDC Customer Mapping Action</field>
		<field name="res_model">mdc.custmap</field>
        <field name="view_id" ref="mdc_custmap_tree"/>
